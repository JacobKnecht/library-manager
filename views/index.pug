extends layout.pug

block content
  h1 Books
  form
    P
      input(name='search' type='search' id='search')
      a(class='button' href='/books/search') Search
  p
    a(class='button', href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
  ul
    - var i = 1;
    while i < (pages + 1)
      li
        a(class='button', href=`/books/pages/${i}`)= i++
