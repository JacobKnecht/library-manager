extends layout.pug

block content
  h1 Books
  p
    a(class='button', href='/new-book') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book, index in books
        tr
          td
            a(href=`/books/${index}`) book.title
          td book.author
          td book.genre
          td book.year
